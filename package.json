{
  "name": "lilith-components",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/lilith-components.umd.js",
  "module": "./dist/lilith-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/lilith-components.es.js",
      "require": "./dist/lilith-components.umd.js"
    }
  },
  "types": "./dist/main.d.ts",
  "version": "0.0.8",
  "description": "This template should help get you started developing with Vue 3 in Vite.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sami-ullah-cowlar/lilith-components.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sami-ullah-cowlar/lilith-components/issues"
  },
  "homepage": "https://github.com/sami-ullah-cowlar/lilith-components#readme",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "build-only": "vite build && vue-tsc --emitDeclarationOnly",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "npm:publish": "npm publish",
    "npm:publish:utility": "git push && npm publish",
    "npm:publish:patch": "npm version patch && npm run npm:publish:utility",
    "npm:publish:minor": "npm version minor && npm run npm:publish:utility",
    "npm:publish:major": "npm version major && npm run npm:publish:utility"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6",
    "vue-tsc": "^1.0.12"
  }
}
